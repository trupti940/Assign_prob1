<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exhibit Navigation</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav aria-label="Main Navigation">
        <ul class="nav-menu">
            <li><a href="#home" aria-current="page">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#exhibits">Exhibits</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>
    </nav>
    
    <!-- Content Sections -->
    <section id="home">Home Section Content</section>
    <section id="about">About Section Content</section>
    <section id="exhibits">Exhibits Section Content</section>
    <section id="contact">Contact Section Content</section>

    <!-- JavaScript for dynamic aria-current update -->
    <script>
        // Select all navigation links
        const links = document.querySelectorAll('.nav-menu a');
        
        // Add click event listener to each link
        links.forEach(link => {
            link.addEventListener('click', function() {
                // Remove aria-current attribute from all links
                links.forEach(link => link.removeAttribute('aria-current'));
                // Set aria-current attribute to the clicked link
                this.setAttribute('aria-current', 'page');
            });
        });
    </script>
</body>
</html>
